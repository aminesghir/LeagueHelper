<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aminesghir.leaguehelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.SummonerStatsActivity" />
        <activity android:name=".UI.MatchListActivity" />
        <activity android:name=".UI.GameDetailActivity" />
        <activity
            android:name=".UI.SummonerDetailActivity"
            android:label="@string/title_activity_summoner_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UI.SummonerSpectateActivity"></activity>
    </application>

</manifest>